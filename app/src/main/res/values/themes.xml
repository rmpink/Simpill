<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="MeditrackAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowLayoutInDisplayCutoutMode" tools:targetApi="o_mr1">shortEdges</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowOverscan">true</item>
        <item name="android:fillViewport">true</item>
    </style>

    <style name="MeditrackAppTheme.BlackBackground">
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">?attr/isLightTheme</item>
        <item name="android:windowBackground">@drawable/bg_black</item>
        <item name="android:statusBarColor">@color/dark_background_nav_bar_color</item>
        <item name="android:navigationBarColor">@color/dark_background_nav_bar_color</item>
        <item name="statusBarBackground">@color/dark_background_nav_bar_color</item>
        <item name="statusBarForeground">@color/dark_background_nav_bar_color</item>
        <item name="android:textColorPrimary">@color/ij_teal</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">@color/white</item>
        <item name="android:colorForeground">#54f0f8ff</item>
        <item name="colorSwitchThumbNormal">@color/white</item>
    </style>

    <style name="CalendarViewTheme" parent="Theme.AppCompat">
        <item name="colorAccent">@color/light_gray</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

</resources>
