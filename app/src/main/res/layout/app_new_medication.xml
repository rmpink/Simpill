<!--    Blister pack image -->
    <ImageView
        android:id="@+id/img_blister_pack"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Blister Pack Icon"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:layout_constraintBottom_toTopOf="@+id/img_pill_bottle"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/mGuideline1"
        app:layout_constraintTop_toBottomOf="@+id/img_capsule"
        app:srcCompat="@drawable/svg_blister_pack" />

    <!--    Pill bottle image -->
    <ImageView
        android:id="@+id/img_pill_bottle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="Pill Bottle Icon"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:layout_constraintBottom_toTopOf="@+id/img_calendar"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/mGuideline1"
        app:layout_constraintTop_toBottomOf="@+id/img_blister_pack"
        app:srcCompat="@drawable/svg_help_question" />

    <!--    Calendar image -->
    <ImageView
        android:id="@+id/img_calendar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@string/calendar_content_description"
        android:scaleX="0.7"
        android:scaleY="0.7"
        app:layout_constraintBottom_toTopOf="@id/horizontalGuideline5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="@id/guideline2"
        app:layout_constraintStart_toStartOf="@id/mGuideline1"
        app:layout_constraintTop_toBottomOf="@+id/img_pill_bottle"
        app:srcCompat="@drawable/svg_calendar_add" />

<!--    Medication name fields -->
    <TextView
        android:id="@+id/tv_medication_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="false"
        android:hint="@string/enter_pill_name"
        android:letterSpacing="0.01"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_capsule"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/img_capsule"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="Autofill,DuplicateSpeakableTextCheck" />

    <EditText
        android:id="@+id/et_medication"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="false"
        android:hint="@string/med_name_hint"
        android:inputType="textCapWords"
        android:isScrollContainer="false"
        android:letterSpacing="0.01"
        android:paddingBottom="12dp"
        android:textColorHint="@color/ij_teal"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/img_capsule"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/tv_medication_name"
        tools:ignore="Autofill,UnusedAttribute" />

