<!--    Strength fields -->
    <TextView
        android:id="@+id/tv_strength"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="false"
        android:hint="Strength"
        android:letterSpacing="0.01"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_blister_pack"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/img_blister_pack"
        tools:ignore="Autofill,UnusedAttribute" />

    <EditText
        android:id="@+id/et_strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="false"
        android:hint="@string/med_strength_hint"
        android:inputType="numberDecimal"
        android:isScrollContainer="false"
        android:letterSpacing="0.01"
        android:textColor="@color/white"
        android:textColorHint="@color/ij_teal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/img_blister_pack"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/tv_strength"
        tools:ignore="Autofill,UnusedAttribute" />

    <Spinner
        android:id="@+id/spn_units"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:backgroundTint="@color/ij_teal"
        android:clickable="false"
        android:entries="@array/units_array"
        android:hint="@string/med_strength_units_hint"
        android:isScrollContainer="false"
        android:letterSpacing="0.01"
        android:spinnerMode="dropdown"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textColorHint="@color/ij_teal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/et_strength"
        app:layout_constraintStart_toEndOf="@+id/et_strength"
        app:layout_constraintTop_toTopOf="@id/et_strength" />

    <!--    Count fields -->
    <TextView
        android:id="@+id/tv_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="false"
        android:hint="Medication Count"
        android:letterSpacing="0.01"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_pill_bottle"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/img_pill_bottle"
        tools:ignore="Autofill,UnusedAttribute" />

    <EditText
        android:id="@+id/et_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="false"
        android:hint="Enter medication count here"
        android:inputType="numberDecimal"
        android:isScrollContainer="false"
        android:letterSpacing="0.01"
        android:textColor="@color/white"
        android:textColorHint="@color/ij_teal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/img_pill_bottle"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/tv_count"
        tools:ignore="Autofill,UnusedAttribute" />

<!--    Refill info fields-->
    <TextView
        android:id="@+id/tv_refill"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="false"
        android:hint="Refill"
        android:importantForAutofill="no"
        android:letterSpacing="0.01"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/img_calendar"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/img_calendar"
        tools:ignore="UnusedAttribute" />

    <TextView
        android:id="@+id/tv_refill_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/transparent"
        android:clickable="false"
        android:hint="No refill information..."
        android:isScrollContainer="false"
        android:letterSpacing="0.01"
        android:textColor="@color/white"
        android:textColorHint="@color/ij_teal"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@id/img_calendar"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toBottomOf="@id/tv_refill"
        tools:ignore="Autofill,UnusedAttribute" />

    <Button
        android:id="@+id/btn_add_medication"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_create_update_btn"
        android:maxWidth="40dp"
        android:text="@string/create_pill_btn"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@id/horizontalGuideline7"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mGuideline"
        app:layout_constraintTop_toTopOf="@+id/horizontalGuideline6"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="UnusedAttribute" />

</androidx.constraintlayout.widget.ConstraintLayout>
